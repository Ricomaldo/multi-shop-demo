{
  // Alfred - Assistant IA DemoForge
  "cursor.ai.personality": "alfred_pennyworth",
  "cursor.ai.responseLimit": "150_words_max",
  "cursor.ai.codeFirst": true,
  "cursor.ai.explanationStyle": "brief_tactical",

  // TypeScript strict pour split view admin
  "typescript.preferences.strictNullChecks": true,
  "typescript.preferences.noImplicitAny": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,

  // Formatage et validation temps réel
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Associations fichiers DemoForge
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.cursorrules": "text",
    "AI_RULES.md": "markdown"
  },

  // Emmet pour composants React
  "emmet.includeLanguages": {
    "typescriptreact": "html"
  },

  // Git commits structurés (français)
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.inputValidationLength": 72,
  "git.inputValidationSubjectLength": 50,

  // Interface Alfred - calme et efficace
  "workbench.colorCustomizations": {
    "statusBar.background": "#050d23",
    "statusBar.foreground": "#ffffff"
  },

  // Performance et focus
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/coverage": true,
    "backend/prisma/dev.db*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true
  },

  // Micro-tâches et validation (5-15min)
  "editor.rulers": [80, 300],
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 5,
  "explorer.openEditors.visible": 3,

  // Split view admin encouragé
  "workbench.colorTheme": "Default Dark+",
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": true,
  "editor.lineNumbers": "on",

  // Celebration victoires (tests + commits)
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",

  // Terminal efficace
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 1000,

  // Auto-complétion intelligente
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on"
}
